{
    "name": "nixilla/twitter-api-consumer",
    "description": "Twitter API consumer in PHP, supports API 1.1 and works with OAuth 1.1 as well as OAuth 2.0",
    "type": "library",
    "keywords": [ "twitter", "api", "oauth2" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Janusz Slota",
            "email": "janusz.slota@nixilla.com",
            "homepage": "http://www.nixilla.com"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "kriswallsmith/buzz": "~0.8"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
        "psr-0": {
            "Twitter": "lib/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
